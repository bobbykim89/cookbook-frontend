{
  "name": "cookbook-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run watch:css && next build",
    "start": "next start",
    "lint": "next lint",
    "watch:css": "postcss styles/tailwind.css -o styles/globals.css",
    "watch": "chokidar \"./pages/**/*.js\" \"./components/**/*.js\" -c \"npm run watch:css\"",
    "develop": "concurrently \"npm run watch\" \"npm run dev\""
  },
  "dependencies": {
    "@apollo/client": "^3.4.15",
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "graphql": "^15.6.0",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.3.6",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^6.2.1",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "postcss-cli": "^9.0.0",
    "tailwindcss": "^2.2.16"
  }
}
